<div class="container">
	<div class="card" >
  <div class="card-header">
    <h3><i class="fas fa-tasks"></i> <b> Tasks</b></h3>
  </div>
  <ul class="list-group list-group-flush">
    
	<% @tasks.each do |task| %>
	<li class="list-group-item">
		<%= task.id %>
		<%= task.name %>
		<% if task.todos.where(completed: true).count == task.todos.count %>
			<span class="badge badge-success">Completed</span>
		<% elsif task.todos.count != 0 && task.todos.where(completed: true).count > 0 %>
		    On progress
		<% else %>
			Not yet started
		<% end %>
	</li>
	<% end %>

  </ul>

  <style >
  	.badge {
  		padding: 8px;
  		font-size: 13px
  	}
  </style>