<div class="container">

	<div class="progress">
	  <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:<%= @width.to_i %>%"></div>
	</div>
	<%= @width.to_i %>% completed<br>
	<center>
		<% if @completed == @total_count %>
			All <%= @total_count %> todo's are Completed
		<% elsif  @completed == 0 %>
			<%= @completed %> out of <%= @total_count %> are completed, Remember Every-thing Start from zero.
		<% else %>
			<%= @completed %> out of <%= @total_count %> are completed
		<% end %>
	</center>

	<h1 class="ml-3">Task details </h1>
	<div>
		Your To-do name - <%= @task.name %>
	</div>
	<div>
		To-do description - <%= @task.description %>
	</div>
	<p>Your tasks</p>
	<ul>
		<% @todos.each do |task| %>
		<li>
			<h3><%= task.name.capitalize %></h3>
			<% if task.completed %>
				completed
			<% else %>	
				not completed
			<% end %>	
		</li>
		<% end %>
	</ul>

	<%= link_to "edit", edit_user_task_path %>
</div>


<script >
 
 var end = Date.now() + (2 * 400);
 var colors = ['#bb0000', '#FFF222', '#34eb4f', '#2B2B52'];
 var width = <%= @width %>
 
	if (width==100.0) {
		(function frame() {
		  confetti({
		    particleCount: 10,
		    angle: 60,
		    spread: 300,
		    origin: { x: 0 },
		    colors: colors
		  });
		  confetti({
		    particleCount: 10,
		    angle: 120,
		    spread: 300,
		    origin: { x: 1 },
		    colors: colors
		  });

		  if (Date.now() < end) {
		    requestAnimationFrame(frame);
		  }
		}());
	}

</script>

