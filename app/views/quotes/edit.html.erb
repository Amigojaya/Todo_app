<div class="container">

	<%= form_for @quote do |form| %>
    <% if @quote.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this Task from being saved:</h2>

        <ul>
          <% @quote.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="field">
      <%= form.label :quote %>
      <%= form.text_area :quotes, class: 'form-control' %>
    </div>

    <% if current_user.admin %>
      <%= form.hidden_field :user_id %>
    <% else %>
      <%= form.hidden_field :user_id, value: current_user.id %>
    <% end %>

    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author, class: 'form-control', placeholder: "Author name only please" %>
    </div>

    <% if current_user.admin %>
	    <div class="field mt-3">
	    	<%= form.select :status, ['pending','approved', 'reject'], class: "form-control"%>
	    </div>
    <% end %>

    <div class="actions">
      <%= form.submit "Update", class: "btn btn-success btn-block mt-3" %>
    </div>

    <% end %>
</div>
