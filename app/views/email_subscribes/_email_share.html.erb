<%= form_for @email, url:{action:"email_subscribe_post", :controller=>"email_subscribes"} do |f| %>
	<div>
	    <div class="row">
	    	<div class="col-2"></div>
	    	<div class="col-8">
			     <div class="input-group mb-3">
		          <div class="input-group-prepend">
		            <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
		          </div>
		          <%= f.email_field :email, autocomplete: "email" , class: "form-control shadow-sm", placeholder: "Your Email", required: true, type: "email" %>
		        </div>
		    </div>
		    <div class="col-2"></div>
	    </div>
	</div>
	<div>
		<div class="captchascale"><center><%= recaptcha_tags %></center></div>
		<center><%= f.submit "Subscribe", class: "btn btn-success btn-sm  mb-2" %></center>
	</div>
	<div class="text-center"><b>Get Daily Motivation</b></div>
<% end %>

<style>
	.captchascale {
		transform: scale(0.8);
	}
</style>