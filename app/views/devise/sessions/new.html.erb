<% flash.each do |name, msg| %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <center><%= msg %></center>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 col-sm-2"></div>
    <div class="col-11 col-lg-4 chill1 col-sm-6 text-center ">
      <h1 >Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
          </div>
          <%= f.email_field :email, autocomplete: "email" , class: "form-control shadow-sm", placeholder: "Email" %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
          </div>
          <%= f.password_field :password, autocomplete: "current-password" , class: "form-control shadow-sm", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" , class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="mt-2 mb-2">
        New user Signup now - <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
        <%= link_to "Resend confirmation instructions", new_confirmation_path(resource_name) %><br />
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      
    </div>
    <div class="col-12 col-lg-4 col-sm-2 chill3"></div>
  </div>
</div>
