<h2 class="text-center mb-4">Resend confirmation Email</h2>
<div class="container">
	<div class="row">
    <div class="col-12 col-lg-4 col-sm-2"></div>
    <div class="col-11 col-lg-4 chill1 col-sm-6 text-center ">
	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
            </div>
	    <%= f.email_field :email, autocomplete: "email",placeholder: "Signed-up Email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
	  </div>

	  <div class="actions">
	  	<center>
	    <%= f.submit "Resend confirmation instructions", class: "btn btn-warning" %>
	</center>
	  </div>
	<% end %>
	<center>
		<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
	<div class="mt-4">
		Already have an account Log-in here - <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-success" %><br>
		<div class="mt-3">New User? Signup now - <%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-primary" %><br /></div>
	</div>
	

	</center>
</div>
</div>
<div class="col-12 col-lg-4 col-sm-2"></div>
</div>

<style >
	.neat {
          min-height: calc(100vh - 200px);
         }
</style>
