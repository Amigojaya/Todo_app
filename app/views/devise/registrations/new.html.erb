<% flash.each do |name, msg| %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <center><%= msg %></center>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 col-sm-2"></div>
    <div class="col-11 col-lg-4 chill1 col-sm-6 text-center ">
      <h1 >Sign up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autocomplete: "email" , class: "form-control shadow-sm", placeholder: "Email" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Min 6 Characters " %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Confirm Password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-warning" %>
          </div>
        <% end %>
        <div class="mt-2" >
          <span > ALready an User? - <%= link_to "Log in", new_session_path(resource_name) %></span><br />
          <span ><%= link_to "Resend confirmation instructions", new_confirmation_path(resource_name) %></span><br />
        </div>
        </div>
    <div class="col-12 col-lg-4 col-sm-2 chill3"></div>
  </div>
</div>
