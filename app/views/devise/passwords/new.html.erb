<h2 class="text-center mb-3">Forgot your password?</h2>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 col-sm-2"></div>
    <div class="col-11 col-lg-4 chill1 col-sm-6 text-center ">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
            </div>
		    <%= f.email_field :email,placeholder: "Your Email",class: "form-control", autocomplete: "email" %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "btn btn-warning" %>
		  </div>
		<% end %>

	  
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <div class="mt-4">
		Already have an account Log-in here - <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-success" %><br>
		<div class="mt-3">New User? Signup now - <%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-primary" %><br /></div>
	</div>
	</div>
</div>
</div>

<style >
	.neat {
          min-height: calc(100vh - 200px);
         }
</style>
