<h2 class="text-center mb-3">Change your password</h2>
<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 col-sm-2"></div>
    <div class="col-11 col-lg-4 chill1 col-sm-6 text-center ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
            </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password more than 6 characters" %>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
            </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password" , class: "btn btn-warning mb-2"%>
        </div>
      <% end %>

      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <div class="mt-4">
        Already have an account Log-in here - <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-success" %><br>
        <div class="mt-3">New User? Signup now - <%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-primary" %><br /></div>
      </div>
    </div>
  </div>
</div>

<style >
  .neat {
          min-height: calc(100vh - 200px);
         }
</style>
